- content_for :page_title do
  = t('terms.title', instance: site_hostname)

.landing-page
  .header-wrapper.compact
    .header
      .container.links
        .brand
          = link_to root_url do
            = image_tag asset_pack_path('logo.png'), alt: '2nd Amendment Social Network'

        %ul.nav
          %li
            - if user_signed_in?
              = link_to t('settings.back'), root_url, class: 'webapp-btn'
            - else
              = link_to t('auth.login'), new_user_session_path, class: 'webapp-btn'
          %li= link_to t('about.about_this'), about_more_path
          -# %li= link_to t('about.sponsors'), about_sponsors_path
          %li
            = link_to 'https://commerce.coinbase.com/checkout/7033354f-059f-4070-b69f-0aa97fb81b5d', class: 'donate-with-crypto' do
              = "Donate"
            %script{:type => "text/javascript",
                    :src  => "https://commerce.coinbase.com/v1/checkout.js"}
            -# = link_to 'https://joinmastodon.org/' do
            -#   = "#{t('about.other_instances')}"
            -#   %i.fa.fa-external-link{ style: 'padding-left: 5px;' }

  .extended-description
    .container
      = @instance_presenter.site_terms.html_safe.presence || t('terms.body_html')
