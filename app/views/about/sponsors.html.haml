- content_for :page_title do
  = site_hostname

- content_for :header_tags do
  = javascript_pack_tag 'public', integrity: true, crossorigin: 'anonymous'
  = render partial: 'shared/og'

.landing-page
  .header-wrapper.compact
    .header
      .container.links
        .brand
          = link_to root_url do
            = image_tag asset_pack_path('logo.png'), alt: '2nd Amendment Social'

        %ul.nav
          %li
            - if user_signed_in?
              = link_to t('settings.back'), root_url, class: 'webapp-btn'
            - else
              = link_to t('auth.login'), new_user_session_path, class: 'webapp-btn'
          %li= link_to t('about.about_this'), about_more_path
          %li= link_to t('about.sponsors'), about_sponsors_path
          %li
            = link_to 'https://joinmastodon.org/' do
              = "#{t('about.other_instances')}"
              %i.fa.fa-external-link{ style: 'padding-left: 5px;' }

      -# .container.hero
      -#   .heading
      -#     %h3= t('about.description_headline', domain: site_hostname)
      -#     %p= @instance_presenter.site_description.html_safe.presence || t('about.generic_description', domain: site_hostname)

  .sponsor-board
    .container
      .information-board-sections
        .section
          %h1= 'SPONSORS'
          %h2= '2ndamendment.social is proudly supported by'
          -# %span= t 'about.user_count_before'
          -# %strong= number_with_delimiter @instance_presenter.user_count
          -# %span= t 'about.user_count_after'
        -# .section
          -# %span= t 'about.status_count_before'
          -# %strong= number_with_delimiter @instance_presenter.status_count
          -# %span= t 'about.status_count_after'
        -# .section
          -# %span= t 'about.domain_count_before'
          -# %strong= number_with_delimiter @instance_presenter.domain_count
          -# %span= t 'about.domain_count_after'
      -# = render 'contact', contact: @instance_presenter

  .extended-description
    .container.sponsors
      .sponsors--logo
        = link_to 'https://2ndamendmentguns.com', target: :_blank do
          = image_tag "http://2ndamendmentguns.com/images/light/store_logo.png", alt: '2nd Amendment Guns'
      .sponsors--logo
        = link_to 'https://www.saftd.org/', target: :_blank do
          = image_tag "https://www.saftd.org/images/saftdlogo2016.png", alt: '2nd Amendment Foundation Training'
      .sponsors--logo
        = link_to 'https://www.saf.org/', target: :_blank do
          = image_tag "https://www.saf.org/wp-content/themes/safsources/images/logo.png", alt: '2nd Amendment Foundation'
      -# = @instance_presenter.site_extended_description.html_safe.presence || t('about.extended_description_html')

  .footer-links
    .container
      %p
        = link_to t('about.source_code'), @instance_presenter.source_url
        = " (#{@instance_presenter.version_number})"
